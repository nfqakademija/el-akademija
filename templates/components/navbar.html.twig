{% block navbar %}

    <div id="navbar">
        <nav class="navbar navbar-expand d-flex justify-content-between">

            <button type="button" id="sidebarCollapse" class="navbar-btn">
                <span></span>
                <span></span>
                <span></span>
            </button>

            {% if app.user %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-link dropdown" id="navbarProfileDropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                        <img src="https://images.vexels.com/media/users/3/129616/isolated/preview/fb517f8913bd99cd48ef00facb4a67c0-businessman-avatar-silhouette-by-vexels.png"
                             alt="profile pic" class="rounded-circle"/>
                        <span>{{ app.user.firstName }} {{ app.user.lastName }}</span>

                    </li>
                    <div class="dropdown-menu dropdown-sticky-nav dropdown-menu-right" aria-labelledby="navbarProfileDropdown">
                        {% if is_granted('ROLE_ADMIN') %}
                            <span class="dropdown-item" style="color: #797979;">Administratorius</span>
                        {% elseif is_granted('ROLE_LECTOR') %}
                            <span class="dropdown-item" style="color: #797979;">Lektorius</span>
                        {% else %}
                            <span class="dropdown-item" style="color: #797979;">Studentas</span>
                        {% endif %}
                        <a class="dropdown-item" href="{{ path('logout') }}">Atsijungti</a>
                    </div>
                </ul>
            {% endif %}
        </nav>
    </div>

{% endblock %}